                                `;

                                // 새로 추가된 업로드 폼에 이벤트 리스너 추가
                                addFileUploadListener();
                            })
                            .catch(error => {
                                alert("파일 삭제 실패: " + error.message);
                            });
                    });
                }
            }

            // 초기화
